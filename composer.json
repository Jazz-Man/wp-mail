{
    "name": "jazzman/wp-mail",
    "authors": [
        {
            "name": "Vasyl Sokolyk",
            "email": "vsokolyk@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.1",
        "phpmailer/phpmailer": "^6.0",
        "templateria/spamassassin": "dev-master"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "roots/wordpress": "^5.3",
        "wpackagist-plugin/contact-form-7": "^5.1"
    },
    "extra": {
        "installer-paths": {
            "vendor/wp/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "vendor/wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "vendor/wp/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "vendor/wp"
    },
    "autoload": {
        "psr-4": {
            "JazzMan\\Mail\\":"src"
        },
        "files": [
            "wp-mail.php",
            "src/helper.php"
        ]
    }
}
